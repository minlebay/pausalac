            "post": {
                "description": "CreateAdmin method creates a new admin user if there are no users in the database",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "users"
                ],
                "summary": "Create a new admin",
                "parameters": [
                    {
                        "description": "New User",
                        "name": "user",
